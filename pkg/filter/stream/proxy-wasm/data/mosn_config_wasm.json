{
    "servers":[
        {
            "default_log_path":"stdout",
            "default_log_level": "DEBUG",
            "routers":[
                {
                    "router_config_name":"router",
                    "virtual_hosts":[
                        {
                            "domains": [
                                "*"],
                            "routers": [
                                {
                                    "match":{
                                        "prefix":"/"
                                    },
                                    "direct_response":{
                                        "status":200,
                                        "body":"Hello MOSN!\n"
                                    }
                                }
                            ]
                        }]
                }
            ],
            "listeners":[
                {
                    "name":"Listener",
                    "address": "127.0.0.1:12345",
                    "bind_port": true,
                    "filter_chains": [
                        {
                            "filters": [
                                {
                                    "type": "proxy",
                                    "config": {
                                        "downstream_protocol": "Auto",
                                        "upstream_protocol": "Auto",
                                        "router_config_name":"router"
                                    }
                                }
                            ]
                        }],
                    "stream_filters":[
                        {
                            "type": "proxy-wasm",
                            "config": {
                                "path":"/tmp/envoy_filter_http_wasm_example.wasm"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "cluster_manager":{
        "auto_discovery":true
    },
    "admin": {
        "address": {
            "socket_address": {
                "address": "0.0.0.0",
                "port_value": 34901
            }
        }
    }
}

